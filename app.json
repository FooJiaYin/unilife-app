{
  "expo": {
    "name": "UniLife",
    "slug": "unilife",
    "scheme": "unilife",
    "version": "2.2.0",
    "orientation": "portrait",
    "primaryColor": "#00AEBB",
    "icon": "./assets/logo.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#00000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "cc.UniLife.UniLife",
      "buildNumber": "2.2.0",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "我們需要取用您的相片，讓您在撰寫貼文時可以選取照片",
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "package": "cc.unilife.unilife",
      "versionCode": 26,
      "googleServicesFile": "./google-services.json"
    },
    "androidStatusBar": {
      "barStyle": "dark-content",
      "backgroundColor": "#00000000"
    },
    "notification": {
      "icon": "./assets/android-notification.png",
      "color": "#00aebb"
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "githubUrl": "https://github.com/Unilife-App/unilife-app",
    // TODO: Comment this for expo start to debug with Expo Go app
    // "runtimeVersion": "1.0.0"
  }
}
