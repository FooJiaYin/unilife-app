{
  "expo": {
    "name": "UniLife",
    "slug": "unilife",
    "scheme": "unilife",
    "version": "3.0.0", // TODO: Remember to change ios and android version before build
    "orientation": "portrait",
    "primaryColor": "#00AEBB",
    "icon": "./assets/logo.png",
    // "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      // TODO: Comment out the below line to run on expo go
      "url": "https://u.expo.dev/8056de9e-2c29-48ec-afd0-fe9f2e5ff125"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "cc.UniLife.UniLife",
      "buildNumber": "3.0.0",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "我們需要取用您的相片，讓您在撰寫貼文時可以選取照片",
        "CFBundleAllowMixedLocalizations": true
      },
      // TODO: Comment out the below line to run on expo go
      "runtimeVersion": {
        "policy": "sdkVersion"
      }
    },
    "android": {
      "package": "cc.unilife.unilife",
      "versionCode": 31,
      "googleServicesFile": "./google-services.json",
      // TODO: Comment out the below line to run on expo go
      "runtimeVersion": "1.0.0"
    },
    "androidStatusBar": {
      "barStyle": "dark-content",
      "backgroundColor": "#00000000"
    },
    "notification": {
      "icon": "./assets/android-notification.png",
      "color": "#00aebb"
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "githubUrl": "https://github.com/Unilife-App/unilife-app",
    "extra": {
      "eas": {
        "projectId": "8056de9e-2c29-48ec-afd0-fe9f2e5ff125"
      }
    }
  }
}
